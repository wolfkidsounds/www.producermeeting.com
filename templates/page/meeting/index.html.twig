{% extends 'page/page.html.twig' %}
{% block title %}{{ title }} | {{ parent() }}{% endblock %}

{% block body %}
    <div id="Main" class="card-group row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-3 mb-3">
        {% for post in posts %}
            <div class="col">
                {{ component('Card:Meeting', {
                    post: post,
                }) }}
            </div>
        {% else %}
            <div class="col-12">
                Wir konnten leider keine Meetings finden...
            </div>
        {% endfor %}
    </div>
{% endblock %}